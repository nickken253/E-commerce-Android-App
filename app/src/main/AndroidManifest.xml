<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mustfaibra.roffu">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.any" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name="com.mustfaibra.roffu.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppTemplate"
        tools:ignore="LockedOrientationActivity"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">

        <profileable
            android:shell="true"
            tools:targetApi="q" />

        <activity
            android:name="com.mustfaibra.roffu.screens.notifications.NotificationScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mustfaibra.roffu.screens.checklist.AddItemScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mustfaibra.roffu.screens.checklist.BarcodeScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mustfaibra.roffu.screens.checklist.FindBarcodeScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mustfaibra.roffu.screens.auth.AuthScreen"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.mustfaibra.roffu.screens.payment.PaymentScreen"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.mustfaibra.roffu.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.AppTemplate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="barcode_ui" />
    </application>

</manifest>